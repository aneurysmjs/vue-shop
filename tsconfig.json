{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "types": [
      "vite/client",
      "vitest/globals",
      "@testing-library/jest-dom",
      "unplugin-vue-router/client",
      "vite-plugin-vue-layouts/client"
    ]
  },
  "include": [
    "./auto-imports.d.ts",
    "./components.d.ts",
    "./typed-router.d.ts",
    "./src/**/*.ts",
    "./src/**/*.vue"
  ],
  "exclude": ["dist", "node_modules"]
}
